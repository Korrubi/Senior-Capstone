<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/layout_margin"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/dietBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_baseline_arrow_back_24">

        </ImageButton>

        <TextView
            android:id="@+id/dietHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_reg"
            android:text="@string/DietTitle"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35dp">

        </TextView>

        <ImageButton
            android:id="@+id/dietForwardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_arrow_forward_24">

        </ImageButton>

    </RelativeLayout>

    <ScrollView
        android:layout_margin="@dimen/layout_margin"
        android:id="@+id/dietList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/Diet_1"
                android:textSize="34sp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout"
                tools:layout_editor_absoluteX="144dp" />

            <CheckBox
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Diet_2"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="132dp" />

            <CheckBox
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Diet_3"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="173dp" />

            <CheckBox
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Diet_4"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="168dp" />

            <CheckBox
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Diet_5"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="141dp" />

            <CheckBox
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Diet_6"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="157dp" />

            <CheckBox
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Diet_7"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="177dp" />

            <CheckBox
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Diet_8"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="177dp" />

            <CheckBox
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Diet_9"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="177dp" />


            <Button
                android:id="@+id/diet_preference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_margin"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/roboto"
                android:text="@string/save_dietPref" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>