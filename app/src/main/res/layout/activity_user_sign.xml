<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/greenRectangle"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/ellipse_1" />

        <View
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/rect_round_login" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/eatingPic"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="145dp"
            android:src="@drawable/shopping_cart"
            app:shapeAppearanceOverlay="@style/loginRound"></com.google.android.material.imageview.ShapeableImageView>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="289dp"
                android:layout_height="48dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="385dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/perfectgreen"
                android:fontFamily="@font/avenir_roman"
                android:hint="@string/enterEmail"
                android:maxLength="100"
                android:textAlignment="center"
                android:textColor="@color/black"></EditText>

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="289dp"
                android:layout_height="48dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="440dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/perfectgreen"
                android:fontFamily="@font/avenir_roman"
                android:hint="@string/enterName"
                android:maxLength="100"
                android:textAlignment="center"
                android:textColor="@color/black"></EditText>

            <EditText
                android:id="@+id/create_pw_edit"
                android:layout_width="289dp"
                android:layout_height="48dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="495dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/perfectgreen"
                android:fontFamily="@font/avenir_roman"
                android:hint="@string/enterPassword"
                android:inputType="textPassword"
                android:maxLength="100"
                android:textAlignment="center"
                android:textColor="@color/black"></EditText>

            <EditText
                android:id="@+id/confirm_create_pw_edit"
                android:layout_width="289dp"
                android:layout_height="48dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="550dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/perfectgreen"
                android:fontFamily="@font/avenir_roman"
                android:hint="@string/confirmPassword"
                android:inputType="textPassword"
                android:maxLength="100"
                android:textAlignment="center"
                android:textColor="@color/black"></EditText>

            <Button
                android:id="@+id/done_button"
                android:layout_width="289dp"
                android:layout_height="48dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="605dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/avenir_roman"
                android:text="@string/Done"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:backgroundTint="#5750A74E"></Button>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ddLogoAcc"
            android:layout_width="100dp"
            android:layout_height="115dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/dd_new_logo"></com.google.android.material.imageview.ShapeableImageView>

    </RelativeLayout>
    <TextView
        android:id="@+id/createAnAccount"
        android:layout_marginLeft="50dp"
        android:layout_width="135dp"
        android:layout_height="111dp"
        android:fontFamily="@font/avenir_roman"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        android:text="@string/createAcc"/>


</androidx.constraintlayout.widget.ConstraintLayout>