<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/greenRectangle"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/ellipse_1" />

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/rect_round_login" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/eatingPic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="175dp"
        android:src="@drawable/eating"
        app:shapeAppearanceOverlay="@style/loginRound">


    </com.google.android.material.imageview.ShapeableImageView>
</FrameLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="135dp"
        android:layout_height="115dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="245dp"
        android:id="@+id/fnpLogo"
        android:src="@drawable/dd_new_logo">
    </com.google.android.material.imageview.ShapeableImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/signInUsername"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="425dp"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/perfectgreen"
            android:fontFamily="@font/avenir_roman"
            android:hint="@string/un"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="18dp"></EditText>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signInPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="500dp"
            app:boxStrokeColor="@color/Black"
            app:boxStrokeWidth="0px"
            app:boxStrokeWidthFocused="0px"
            android:textColorHint="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.15"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="302dp"
                android:layout_height="56dp"
                android:layout_marginStart="56dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/perfectgreen"
                android:drawablePadding="-30dp"
                android:fontFamily="@font/avenir_roman"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:hint="@string/pw"
                android:inputType="textPassword"
                android:maxLength="100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signInUsername" />

        </com.google.android.material.textfield.TextInputLayout>


        <!--                <EditText-->
        <!--                    android:id="@+id/signInPassword"-->
        <!--                    android:layout_width="292dp"-->
        <!--                    android:layout_height="55dp"-->
        <!--                    android:layout_marginLeft="65dp"-->
        <!--                    android:layout_marginTop="500dp"-->
        <!--                    android:background="@drawable/rectangle"-->
        <!--                    android:backgroundTint="@color/perfectgreen"-->
        <!--                    android:fontFamily="@font/avenir_roman"-->
        <!--                    android:hint="@string/pw"-->
        <!--                    android:inputType="textPassword"-->
        <!--                    android:maxLength="100"-->
        <!--                    android:textAlignment="center"-->
        <!--                    android:textColor="@color/black"></EditText>-->

        <Button
            android:id="@+id/signInButton"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="575dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/sn"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:backgroundTint="#5750A74E"></Button>
    </RelativeLayout>

</RelativeLayout>
    <TextView
        android:layout_marginLeft="50dp"
        android:layout_width="122dp"
        android:layout_height="31dp"
        android:fontFamily="@font/avenir_roman"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        android:text="@string/welcomeString"/>

    <TextView
        android:layout_marginLeft="50dp"
        android:layout_width="167dp"
        android:layout_height="65dp"
        android:fontFamily="@font/avenir_roman"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141"
        android:text="@string/loginWelcome"/>
</androidx.constraintlayout.widget.ConstraintLayout>