<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.signup.SignUpFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/greenRectangle"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/ellipse_1" />

        <View
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/rect_round_login" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/eatingPic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="142dp"
            android:src="@drawable/shopping_cart"
            app:shapeAppearanceOverlay="@style/loginRound"></com.google.android.material.imageview.ShapeableImageView>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="290dp"
                android:layout_height="56dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="335dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/perfectgreen"
                android:fontFamily="@font/avenir_roman"
                android:hint="@string/enterEmail"
                android:maxLength="100"
                android:textAlignment="center"
                android:textColor="@color/black"></EditText>

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="290dp"
                android:layout_height="56dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="400dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/perfectgreen"
                android:fontFamily="@font/avenir_roman"
                android:hint="@string/enterName"
                android:maxLength="100"
                android:textAlignment="center"
                android:textColor="@color/black">

            </EditText>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_password"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="465dp"
                android:textColorHint="#808080"
                app:boxStrokeColor="@color/Black"
                app:boxStrokeWidth="0px"
                app:boxStrokeWidthFocused="0px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.15"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="292dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/perfectgreen"
                    android:drawablePadding="-30dp"
                    android:fontFamily="@font/avenir_roman"
                    android:gravity="center"
                    android:hint="@string/enterPassword"
                    android:inputType="textPassword"
                    android:maxLength="100"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signInUsername" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_create_password"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="530dp"
                android:textColorHint="#808080"
                app:boxStrokeColor="@color/Black"
                app:boxStrokeWidth="0px"
                app:boxStrokeWidthFocused="0px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.15"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="292dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/perfectgreen"
                    android:drawablePadding="-30dp"
                    android:fontFamily="@font/avenir_roman"
                    android:gravity="center"
                    android:hint="@string/confirmNewPassword"
                    android:inputType="textPassword"
                    android:maxLength="100"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signInUsername" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/done_button"
                android:layout_width="290dp"
                android:layout_height="56dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="595dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/avenir_roman"
                android:text="@string/Done"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:backgroundTint="#5750A74E"></Button>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ddLogoAcc"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/dd_new_logo"></com.google.android.material.imageview.ShapeableImageView>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/createAnAccount"
        android:layout_width="135dp"
        android:layout_height="111dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/avenir_roman"
        android:text="@string/createAcc"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />


</FrameLayout>