<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
        android:id="@+id/titleScreenBackground"
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/home_page_skillet"/>

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="709dp"
            android:layout_marginBottom="1300dp"
            android:background="@drawable/ellipse_1" />

        <View
            android:id="@+id/gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linear_gradient_grey" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ddLogoAcc"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/dd_new_logo">
        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/dish_discovery"
            android:layout_width="294dp"
            android:layout_height="267dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="207dp"
            android:text="@string/dishDiscovery"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:fontFamily="@font/avenir_roman"
            android:textSize="65sp"
            android:gravity="center_horizontal|top"
            />

        <TextView
            android:id="@+id/mealTime"
            android:layout_width="294dp"
            android:layout_height="267dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="425dp"
            android:text="@string/mealTimeMade"
            android:textColor="@color/white"
            android:letterSpacing="0.03"
            android:fontFamily="@font/avenir_roman"
            android:textSize="24sp"
            android:gravity="center_horizontal|top"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/login"
            android:layout_width="289dp"
            android:layout_height="48dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="475dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/login"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:backgroundTint="#D9F3ECDA">
        </Button>

        <Button
            android:id="@+id/createAcc"
            android:layout_width="289dp"
            android:layout_height="48dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="535dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/createAccStart"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:backgroundTint="#D9F3ECDA">
        </Button>

        <Button
            android:id="@+id/guest"
            android:layout_width="289dp"
            android:layout_height="48dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="595dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/guest"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:backgroundTint="#D9F3ECDA">
        </Button>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>